{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "paths": {
      "@/*": ["./dep/frontend/src/*"],
      "@frontend/*": ["./dep/frontend/*"],
      "@edtr-io/*": ["./dep/frontend/src/serlo-editor-repo/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dep/frontend/node_modules"]
}
