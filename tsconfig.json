{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "paths": {
      "@/*": ["./dep/frontend/src/*"],
      "@edtr-io/*": ["./dep/frontend/src/serlo-editor-repo/*"],
      "@frontend/*": ["./dep/frontend/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.{ts,tsx}",
    "dep/frontend/src/**/*.{ts,tsx}"
  ],
  "exclude": ["node_modules", "dep/frontend/node_modules"]
}
