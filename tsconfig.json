{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noErrorTruncation": true,
    "paths": {
      "@/*": ["./dep/frontend/src/*"],
      "@edtr-io/*": ["./dep/frontend/src/serlo-editor-repo/*"],
      "@frontend/*": ["./dep/frontend/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "esnext",
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo"
  },
  "exclude": ["node_modules", "dep/frontend/node_modules"],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "dep/frontend/src/**/*.{ts,tsx}"
  ],
  "ts-node": {
    "esm": true
  }
}
